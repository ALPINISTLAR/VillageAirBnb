<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Village AirBNB</title>
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <!-- ======================================= -->
    <!-- =====         GOOGLE FONTS         ==== -->
    <!-- ======================================= -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- =============================== -->
    <!-- =====       STYLES        ===== -->
    <!-- =============================== -->
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <!-- Header -->
    <header class="header header__simple">
        <div class="header__container container">
            <a href="/" class="header__logo logo__simple">
                <svg class="logo_icon icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                <span>VillageAirBNB</span>
            </a>

            <div class="user-section">
                <div class="user-name">Welcome, <span>Daniel</span></div>
                <a href="/profile" class="user-profile-link">
                    <img class="user-avatar" src="./img/nathan.jpg" alt="user-avatar" width="50" height="50">
                </a>
            </div>
        </div>
    </header>

    <!-- ************************ -->
    <!-- ***   MAIN SECTION   *** -->
    <!-- ************************ -->
    <main class="main-content">
        <div class="container">
            <div class="listing-form_wrapper">
                <div class="listing-form_header">
                    <h1 class="listing-form_header-title">List Your Village Stay</h1>
                    <p class="listing-form_header-subtitle">Share your authentic village experience with travelers</p>
                </div>
                <!-- Success Message -->
                <div id="successMessage" class="success-message">
                    <i class="fas fa-check-circle success-icon icon"></i>
                    <span class="success-text">Your listing has been submitted successfully!</span>
                </div>


               <!-- Form -->
<div class="listing-form_container">
    <!-- Property Details -->
    <div class="listing-form_section">
        <h2 class="listing-form_section-title">
            <i class="fa-solid fa-house" aria-hidden="true"></i>
            Property Details
        </h2>

        <div class="listing-form_group">
            <label class="listing-form_label">Property Name *</label>
            <input type="text" id="propertyName" class="listing-form_input" placeholder="Traditional Mountain Home">
        </div>

        <div class="listing-form_grid">
            <div class="listing-form_group">
                <label class="listing-form_label">Max Guests *</label>
                <input type="number" id="maxGuests" class="listing-form_input" placeholder="4">
            </div>
            <div class="listing-form_group">
                <label class="listing-form_label">Bedrooms *</label>
                <input type="number" id="bedrooms" class="listing-form_input" placeholder="2">
            </div>
            <div class="listing-form_group">
                <label class="listing-form_label">Bathrooms *</label>
                <input type="number" id="bathrooms" class="listing-form_input" placeholder="1">
            </div>
        </div>
    </div>

    <!-- Location -->
    <div class="listing-form_section">
        <h2 class="listing-form_section-title">
            <i class="fas fa-map-marker-alt"></i>
            Location
        </h2>

        <div class="listing-form_grid">
                        <div class="listing-form_group">
                <label class="listing-form_label">Region *</label>
                <input type="text" id="region" class="listing-form_input" placeholder="Fergana Valley">
            </div>
            <div class="listing-form_group">
                <label class="listing-form_label">City/Village *</label>
                <input type="text" id="city" class="listing-form_input" placeholder="Khokand city">
            </div>
            <div class="listing-form_group">
            <label class="listing-form_label">Street Address *</label>
            <input type="text" id="address" class="listing-form_input" placeholder="Independence street">
        </div>
        </div>
    </div>

    <!-- Pricing -->
    <div class="listing-form_section">
        <h2 class="listing-form_section-title">
            <i class="fas fa-dollar-sign"></i>
            Pricing
        </h2>

        <div class="listing-form_group">
            <label class="listing-form_label">Price per Night (USD) *</label>
            <div class="listing-form_price-wrapper">
                <span class="listing-form_price-symbol">$</span>
                <input type="number" id="pricePerNight" class="listing-form_input listing-form_price-input" placeholder="42">
            </div>
        </div>
    </div>

    <!-- Photos -->
    <div class="listing-form_section">
        <h2 class="listing-form_section-title">
            <i class="fas fa-cloud-upload-alt"></i>
            Photos
        </h2>

        <label for="image-upload" class="listing-form_upload-area">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="listing-form_upload-icon"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="17 8 12 3 7 8"></polyline><line x1="12" x2="12" y1="3" y2="15"></line></svg>
            <div class="listing-form_upload-text">Click to upload images</div>
            <div class="listing-form_upload-hint">PNG, JPG up to 5MB each</div>
        </label>
        <input type="file" id="image-upload" class="listing-form_file-input" multiple accept="image/*">
        <div id="imagePreviewGrid" class="listing-form_image-preview--grid"></div>
    </div>

    <!-- Amenities -->
    <div class="listing-form_section">
        <h2 class="listing-form_section-title">Amenities</h2>

        <div class="listing-form_amenities-grid">
            <button type="button" class="listing-form_amenity-btn" data-amenity="wifi">
                <i class="fas fa-wifi"></i>
                <div class="listing-form_amenity-label">Wi-Fi</div>
            </button>

            <button type="button" class="listing-form_amenity-btn" data-amenity="kitchen">
                <i class="fas fa-utensils"></i>
                <div class="listing-form_amenity-label">Kitchen</div>
            </button>

            <button type="button" class="listing-form_amenity-btn" data-amenity="parking">
                <i class="fas fa-parking"></i>
                <div class="listing-form_amenity-label">Free Parking</div>
            </button>

            <button type="button" class="listing-form_amenity-btn" data-amenity="ac">
                <i class="fas fa-snowflake"></i>
                <div class="listing-form_amenity-label">Air Conditioning</div>
            </button>

            <button type="button" class="listing-form_amenity-btn" data-amenity="tv">
                <i class="fas fa-tv"></i>
                <div class="listing-form_amenity-label">TV</div>
            </button>

            <button type="button" class="listing-form_amenity-btn" data-amenity="coffee">
                <i class="fas fa-mug-hot"></i>
                <div class="listing-form_amenity-label">Coffee Maker</div>
            </button>

            <button type="button" class="listing-form_amenity-btn" data-amenity="hiking">
                <i class="fas fa-hiking"></i>
                <div class="listing-form_amenity-label">Hiking Access</div>
            </button>

            <button type="button" class="listing-form_amenity-btn" data-amenity="pool">
                <i class="fas fa-swimming-pool"></i>
                <div class="listing-form_amenity-label">Pool</div>
            </button>

            <button type="button" class="listing-form_amenity-btn" data-amenity="gym">
                <i class="fas fa-dumbbell"></i>
                <div class="listing-form_amenity-label">Gym</div>
            </button>
        </div>
    </div>

    <!-- Description -->
    <div class="listing-form_section">
        <h2 class="listing-form_section-title">Description</h2>

        <div class="listing-form_group">
            <label class="listing-form_label">Tell guests about your place *</label>
            <textarea id="description" class="listing-form_textarea" rows="6" placeholder="Describe your property, the surrounding area, and what makes it special..."></textarea>
        </div>
    </div>

    <!-- Submit Button -->
    <div class="listing-form_submit-section">
        <button type="button" id="submitButton" class="listing-form_submit-btn btn btn-red btn-submit">Submit Listing</button>
    </div>
</div>
        </div>
    </div>
</main>
